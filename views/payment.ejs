<!DOCTYPE html>
<html lang="en">
  <head>
    <title>결제하기</title>
    <script
      type="text/javascript"
      src="https://code.jquery.com/jquery-1.12.4.min.js"
    ></script>
    <script
      type="text/javascript"
      src="https://cdn.iamport.kr/js/iamport.payment-1.2.0.js"
    ></script>
    <script
      type="text/javascript"
      src="https://unpkg.com/axios/dist/axios.min.js"
    ></script>

    <script
      src="https://code.jquery.com/jquery-3.3.1.min.js"
      integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
      crossorigin="anonymous"
    ></script>
    <script>
      function mypayment() {
        //const imp_code= process.env.imp;
        const myAmount = Number(document.getElementById("amount").value);
        const myName = "홍길동";
        const myEmail = "gildong@gmail.com";
        const myCommodity = "마우스";
        const myAdress = "서울특별시 강남구 신사동";

        const IMP = window.IMP; // 생략 가능
        IMP.init("imp45506818"); // Example: imp00000000
        IMP.request_pay(
          {
            // param
            pg: "kakaopay",
            pay_method: "card",
            name: myCommodity,
            amount: myAmount,
            buyer_email: myEmail,
            buyer_name: myName,
            buyer_tel: "010-3333-3333",
            buyer_addr: myAdress,
            buyer_postcode: "01181",
            m_redirect_url: "http://localhost:3000", // 모바일 결제후 리다이렉트될 주소!!
          },
          function (rsp) {
      			//rsp.imp_uid 값으로 결제 단건조회 API를 호출하여 결제결과를 판단합니다.
            if (rsp.success) {
              $.ajax({
                url: "/payment/validate",
                method: "POST",
                contentType: "application/json",
                data: JSON.stringify({
                  imp_uid: rsp.imp_uid,            // 결제 고유번호
                  merchant_uid: rsp.merchant_uid,   // 주문번호
                  amount: rsp.paid_amount,
                  buyer: myEmail,
                  address: myAdress
                }),
            }).done(function (data) {
              // 가맹점 서버 결제 API 성공시 로직
              })
            } else {
                alert("결제에 실패하였습니다. 에러 내용: " + rsp.error_msg);
            }
          },   
        );
      }
    </script>
  </head>
  <body>
    <!--구매자 이름: <input type="text" id="name" />
    구매자 이메일: <input type="text" id="email" />
    구매자 주소: <input type="text" id="address" />
    결제할 상품:  <input type="text" id="commodity" />-->
    결제할 금액: <input type="text" id="amount" />
    <button onclick="mypayment()">결제하기</button>
  </body>
</html>